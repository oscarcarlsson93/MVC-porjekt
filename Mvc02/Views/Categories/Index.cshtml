@model IEnumerable<Mvc02.Models.Category>


@{
    ViewData["Title"] = "Index";
    List<string> test = ViewData["hello"] as List<string>;
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form method="get" asp-action="Search">
    <div>
        <input type="search" name="q" placeholder="Search for product..." size="30" />
        <button>Search</button>
    </div>

</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)             
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <a asp-action="ShowAllConnectedProducts" asp-route-id="@item.Id">Show all connected products</a> |
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
