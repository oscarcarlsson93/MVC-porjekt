@model Mvc02.Models.ViewModels.UserTableVm

@{
    ViewData["Title"] = "Index";
}

<h2>User Overview</h2>


<table class="table">
    <thead>
        <tr>
            <th>
                Email
            </th>
            <th>
                Roles
            </th>
            <th>
            </th>
            <th>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Rows)
        {
            
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IdentityUser.Email)
                </td>
                <td>
                 @foreach (var x in item.Roles)
                 {
                    @Html.DisplayFor(modelItem => x)
                     <br />
                 }
                    
                </td>
                <td>
                </td>
                <td>



                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="">Edit</a> |
                    <a asp-action="Details" asp-route-id="">Details</a> |
                    <a asp-action="Delete" asp-route-id="">Delete</a> |
                    <a asp-controller="Products" asp-action="Block2" asp-route-email="@item.IdentityUser">Block user</a>
                </td>
            </tr>
            
        }
    </tbody>
</table>
